<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/uploadImgPreview"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/jetpack_chart"
        app:layout_constraintBottom_toTopOf="@+id/item_card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/uploadImgPreview"
        app:cardBackgroundColor="@color/colorPrimaryLight"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_tags_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="244dp"
                android:text="Tags:"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.06"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tag_1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="240dp"
                android:layout_marginBottom="240dp"
                android:text="Tag 1"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/rounded_corners"
                android:gravity="center"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tag_2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="131dp"
                android:layout_marginBottom="240dp"
                android:text="Tag 2"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/rounded_corners"
                android:gravity="center"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tag_3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="240dp"
                android:text="Tag 3"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@drawable/rounded_corners"
                android:gravity="center"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />



            <TextView
                android:id="@+id/item_times_worn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="112dp"
                android:text="Times Worn:"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.125"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_date_added_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Date Added:"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.123"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_date_added_value"
                android:layout_width="96dp"
                android:layout_height="21dp"
                android:layout_marginTop="80dp"
                android:text="05-26-2020"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_times_worn_value"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginTop="112dp"
                android:text="0"
                android:textSize="16sp"
                app:layout_constraintHorizontal_bias="0.447"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="144dp"
                android:text="Status:"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.111"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="144dp"
                android:text="Not in Laundry"
                android:textSize="16sp"
                android:gravity="left"
                app:layout_constraintHorizontal_bias="0.513"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/laundry_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:text="Add to Laundry"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorButton"
                app:layout_constraintTop_toBottomOf="@+id/status_value"
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="200dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>